#include <stdio.h>
#include <string.h>

int main() {
    int num_tests;
    char result[81];

    scanf("%d", &num_tests);

    for (int i = 0; i < num_tests; i++) {
        scanf("%s", result);

        int score = 0;
        int combo = 0;

        for (int j = 0; j < strlen(result); j++) {
            if (result[j] == 'O') {
                combo++;
                score += combo;
            } else {
                combo = 0;
            }
        }

        printf("%d\n", score);
    }

    return 0;
}
